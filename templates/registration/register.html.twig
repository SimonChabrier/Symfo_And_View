{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
<div class= "pageContent">
    <div class= "registerForm">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1>Création de compte</h1>

        {{ form_start(registrationForm, {'attr': {'class' : "registerForm--content"}}) }}

            {{ form_row(registrationForm.username, {'attr': {'class' : "registerForm--label"}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class' : "registerForm--label"}}) }}
            {{ form_row(registrationForm.plainPassword, {'label': 'password', 'attr': {'class' : "registerForm--label"} }) }}
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class' : "registerForm--label"}}) }}
            
            <button type="submit" class="btn">Valider</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
